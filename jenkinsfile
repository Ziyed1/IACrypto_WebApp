pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }
        stage('Build Frontend') {
            when {
                branch 'frontend'
            }
            steps {
                echo 'Building Frontend...'
                sh '''
                cd frontend
                npm install
                npm run build
                '''
            }
        }
        stage('Build Backend') {
            when {
                branch 'backend'
            }
            steps {
                echo 'Building Backend...'
                sh '''
                cd backend
                npm install
                npm run build
                '''
            }
        }
        stage('Deploy Frontend') {
            when {
                branch 'frontend'
            }
            steps {
                echo 'Deploying Frontend...'
                sshagent(['ec2-ssh-key']) {
                    sh '''
                    scp -r frontend/build/* ec2-user@13.39.81.119:/var/www/frontend
                    ssh ec2-user@13.39.81.119 'sudo systemctl restart nginx'
                    '''
                }
            }
        }
        stage('Deploy Backend') {
            when {
                branch 'backend'
            }
            steps {
                echo 'Deploying Backend...'
                sshagent(['ec2-ssh-key']) {
                    sh '''
                    scp -r backend/* ec2-user@13.39.81.119:/var/www/backend
                    ssh ec2-user@13.39.81.119 'pm2 reload all'
                    '''
                }
            }
        }
    }
    post {
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed. Please check the logs.'
        }
    }
}
